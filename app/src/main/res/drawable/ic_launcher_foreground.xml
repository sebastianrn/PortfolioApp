            <gradient
                android:startX="40"
                android:startY="42"
                android:endX="68"
                android:endY="58"
                android:type="linear">
                <item android:offset="0.0" android:color="#FFFFEC8B" />
                <item android:offset="0.3" android:color="#FFFFD700" />
                <item android:offset="0.7" android:color="#FFFFC107" />
                <item android:offset="1.0" android:color="#FFFFB300" />
            </gradient>
        </aapt:attr>
    </path>

