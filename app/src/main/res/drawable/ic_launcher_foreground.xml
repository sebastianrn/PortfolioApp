    <path
        android:pathData="M40,50 L40,62 L54,70 L54,58 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="40"
                android:startY="50"
                android:endX="54"
                android:endY="70"
                android:type="linear">
                <item android:offset="0.0" android:color="#FFB8860B" />
                <item android:offset="1.0" android:color="#FF8B6914" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Right face (medium) -->
    <path
        android:pathData="M54,58 L54,70 L68,62 L68,50 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="54"
                android:startY="58"
                android:endX="68"
